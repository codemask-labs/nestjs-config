{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "Node16",
    "lib": ["esnext"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "lib/*": ["./src/lib/*"],
      "module/*": ["./src/module/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
