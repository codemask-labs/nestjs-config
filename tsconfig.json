{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "Node16",
    "lib": ["esnext"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDirs": ["./example", "./lib"],
    "paths": {
      "lib/*": ["./lib/*"],
      "example/*": ["./example/*"]
    }
  },
  "include": ["lib", "example"],
  "exclude": ["dist", "node_modules"]
}
